<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mening.dasturim.technovationchalange">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_mentl"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TechnovationChalange">
        <activity
            android:name=".ui.main.user.chat.message.MessageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.user.chat.profile.SetUpProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.user.chat.activation.ActivationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.user.chat.verification.VerificationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.user.chat.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>